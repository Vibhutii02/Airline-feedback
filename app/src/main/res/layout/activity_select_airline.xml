<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/backgroundimage2"
    >

    <TextView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Select Airline"
        android:textColor="#8E24AA"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="30dp"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_view"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_marginTop="50dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/AirIndia"
            android:layout_width="202dp"
            android:layout_height="182dp"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="30dp"
            android:src="@drawable/airindia"/>

        <ImageButton
            android:id="@+id/Indigo"
            android:layout_width="202dp"
            android:layout_height="182dp"
            android:src="@drawable/indigo"
            android:padding="30dp"
            android:layout_row="0"
            android:layout_column="1"/>

        <ImageButton
            android:id="@+id/Vistara"
            android:layout_width="202dp"
            android:layout_height="182dp"
            android:src="@drawable/vistara"
            android:padding="30dp"
            android:layout_row="1"
            android:layout_column="0"/>

        <ImageButton
            android:id="@+id/GoAir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="30dp"
            android:src="@drawable/goair" />

        <ImageButton
            android:id="@+id/SpiceJet"
            android:layout_width="197dp"
            android:layout_height="164dp"
            android:layout_row="2"
            android:layout_column="0"
            android:padding="30dp"
            android:src="@drawable/spicejet" />

        <ImageButton
            android:id="@+id/AirAsia"
            android:layout_width="205dp"
            android:layout_height="173dp"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="30dp"
            android:src="@drawable/airasia" />


    </GridLayout>
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>
</LinearLayout>